{
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "process": false
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "camelcase": 2,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-console": ["error", { "allow": ["error"]}],
    "no-unused-vars": ["error", { "args": "none"}],
    "quotes": [2, "single"],
    "strict": 2,

    "react/display-name": 0,
    "react/prop-types": 0,
    "react/no-deprecated": 0
  }
}
